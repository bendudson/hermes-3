nout = 5
timestep = 20

[mesh]
nx = 10
ny = 10
nz = 10

yn = y / (2π)
zn = z / (2π)

[solver]
mxstep = 1000

[hermes]
components = e

[e]
type = evolve_density

# Both charge and mass are expected if density is evolved
charge = -1
AA = 1/1836  # Atomic mass

[Ne]
function = exp(-(x - 0.5)^2 - (mesh:yn - 0.5)^2 - (mesh:zn - 0.5)^2)


